body
    font-family sans-serif
    background-color black

html, .fullscreen
    display flex
    height 100%
    margin 0
    padding 0
    width 100%

.container
    margin auto
    text-align center

.title
    font-size 3rem

#colors
    width 100%
    display flex
    flex-wrap wrap

.color
    flex 1 0 20%

.color:after
    content ''
    display block
    padding-bottom 100%

#fullScreenColor
    position: fixed
    width 100vw
    height 100vh
    image-rendering pixelated

@keyframes fadeIn{
    from { 
        opacity 0 
    }
    to {
        opacity 1
    }
}
.fadeIn
    opacity 0
    animation fadeIn ease-in 1
    animation-fill-mode forwards
    animation-duration 0.2s