body
    &.noscript
        width 100%
        margin 0
        padding 0
        background-color black

.noscript
    @keyframes fadeIn{
        from { 
            opacity 0 
        }
        to {
            opacity 1
        }
    }
    .fade-in
        opacity 0
        animation fadeIn ease-in 1
        animation-fill-mode forwards
        animation-duration 0.5s

    --animation 0.6s
    .colorSwitch
        input
            opacity 0
            width 0
            height 0
            visibility hidden
            position fixed
            top -100px
    .color
        position fixed
        z-index 1
        cursor pointer
        transition var(--animation)
        &:before
            position fixed
            content ""
            height 25%
            width 20%
            transition var(--animation)
    input
        &:checked
            & + .color
                z-index 300
                &:before
                    border-radius 100vw
                    height 200vh
                    width 200vw
                    position fixed
                    top -50vh
                    left -50vw
                    z-index 420
