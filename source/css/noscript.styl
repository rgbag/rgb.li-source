body
    &.noscript
        width 100%
        margin 0
        padding 0
        background-color black

.noscript
    --animation 0.6s
    .colorSwitch
        input
            opacity 0
            width 0
            height 0
            visibility hidden
            position fixed
            top -100px
    .color
        position fixed
        z-index 1
        cursor pointer
        transition var(--animation)
        &:before
            position fixed
            content ""
            height 25%
            width 20%
            transition var(--animation)
    input
        &:checked
            & + .color
                z-index 300
                &:before
                    height 100vh
                    width 100vw
                    position fixed
                    top 0
                    left 0
                    z-index 420
